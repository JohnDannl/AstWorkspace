<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_container"
    android:background="#FF1B1F23"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.arcsoft.closeli.draggableviewpager.DraggableViewPager
        android:id="@+id/gridview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView android:id="@+id/navi_bar_left"
        android:layout_marginLeft="10dip"
        android:background="@drawable/icon_left_dragvpg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:visibility="gone"/>
    <ImageView android:id="@+id/navi_bar_right"
        android:layout_marginRight="10dip"
        android:background="@drawable/icon_right_dragvpg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:visibility="gone"/>
</RelativeLayout>
